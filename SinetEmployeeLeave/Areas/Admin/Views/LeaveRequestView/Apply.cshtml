@model LeaveRequest
@using SinetEmployeeLeave.Models

@{
    ViewData["Title"] = "Apply for Leave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Apply for Leave</h2>

<form method="post">
    <div class="form-group">
        <label>Leave Type</label>
        <select asp-for="LeaveType" class="form-control">
            <option value="Vacation">Vacation</option>
            <option value="SickLeave">Sick Leave</option>
            <option value="MaternityLeave">Maternity Leave</option>
            <option value="PaternityLeave">Paternity Leave</option>
            <option value="UnpaidLeave">Unpaid Leave</option>
        </select>
    </div>

    <div class="form-group">
        <label>Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Reason</label>
        <textarea asp-for="Reason" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Request</button>
</form>
